<div class="container">
  <h1>All flats</h1>
  <div>
    <ul class="cards">
      <% @flats.each do |flat| %>
        <li class="ma-li  ">
          <div class="wrapper">
            <div class="flat-card">
              <%= link_to flat_path(flat) do %>
                <% if flat.photo.key? %>
                  <div class="card-category" style="background-image: url('<%= cl_image_path flat.photo.key, crop: :fill %>')">
                <% else %>
                  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
                <% end %>
                </div>
                  <div class="flat-info">
                    <div class="rating">
                      <h5><%= flat.title%></h5>
                      <p><i class="fa-solid fa-star"></i> <strong><%= flat.average_rating.round(2) %></strong></p>
                    </div>
                      <p><%= flat.description %></p><p><strong><%= humanized_money(flat.price) %> â‚¬</strong> par nuit</p>
                  </div>
                <% end %>
            </div>
            <div tabindex="0" role="button" class="favorite-link" >
              <svg xmlns="http://www.w3.org/2000/svg" fill="rgba(0, 0, 0, 0.5)" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"  data-controller="favorite" data-action="click->favorite#favorite" data-favorited="false"  class="w-6 h-6 heart">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
              </svg>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
