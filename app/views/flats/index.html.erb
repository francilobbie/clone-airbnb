<div class="container">
  <div class="index_margin_top">
    <ul class="cards">
      <% @flats.each do |flat| %>
        <li class="ma-li">
          <div class="wrapper">
            <div class="flat-card">
            <%= link_to flat_path(flat) do %>
            <div id="carousel-<%= flat.id %>" class="carousel slide">
              <div class="carousel-inner">
                <% flat.photos.each_with_index do |photo, index| %>
                  <div class="carousel-item <%= 'active' if index == 0 %>">
                    <div class="card-category" style="background-image: url('<%= cl_image_path photo.key, crop: :fill %>')">
                    </div>
                  </div>
                <% end %>
              </div>
              <button class="carousel-control-prev" type="button" data-bs-target="#carousel-<%= flat.id %>" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#carousel-<%= flat.id %>" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
            <div class="flat-info">
              <div class="rating">
                <h5><%= flat.address_by_coordinates_for_index %></h5>
                <p><i class="fa-solid fa-star"></i> <%= flat.average_rating.round(2) %></p>
              </div>
              <p>13-28 janv.</p>
              <p><strong id="price_index"><%= humanized_money(flat.price) %> â‚¬</strong> par nuit</p>
            </div>
            <% end %>
            </div>
            <div tabindex="0" role="button" class="favorite-link">
              <svg xmlns="http://www.w3.org/2000/svg" fill="rgba(0, 0, 0, 0.5)" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"  data-controller="favorite" data-action="click->favorite#favorite" data-favorited="false"  class="w-6 h-6 heart">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
              </svg>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
